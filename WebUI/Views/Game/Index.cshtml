@model IEnumerable<Application.Dtos.ProductsDto.Technology.Games.GameDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameGeneralFeaturesObjectsValue.Developers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameGeneralFeaturesObjectsValue.Platform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameSpecificationsObjectsValue.Format)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameSpecificationsObjectsValue.AudioLanguages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameRequirementsObjectsValue.MinimumProcessorsRequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameRequirementsObjectsValue.MinimumOperatingSystemsRequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameGeneralFeaturesObjectsValue.Developers)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameGeneralFeaturesObjectsValue.Platform)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameSpecificationsObjectsValue.Format)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameSpecificationsObjectsValue.AudioLanguages)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameRequirementsObjectsValue.MinimumProcessorsRequired)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameRequirementsObjectsValue.MinimumOperatingSystemsRequired)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
