@model ProductViewModel

@foreach (var item in Model.ProductsDto)
{
    if (item.Category.CategoryName == "Fashion")
    {
        @await Component.InvokeAsync("FashionMenu")
    }
    break;
}

@foreach (var item in Model.ProductsDto)
{
    if (item.Category.CategoryName == "Smartphones")
    {
        @await Component.InvokeAsync("SmartphonesMenu")
    }
    break;
}