@model Application.Dtos.CategoryDto
<style>
    .card_style_category:hover {
        border: 1px solid;
        border-color: #8ac926;
        box-shadow: 0px 0px 2px 0px rgba(138, 201, 38, 1)
    }

    a {
        text-decoration: none;
    }

    p {
        color: black;
        font-weight: 400;
        font-size: 15px;
    }
</style>

<a asp-controller="Products" asp-action="Index" asp-route-categoryStr="@Model.CategoryName" style="color:gray">
    <div class="mt-2">
        <div class="card card_style_category text-center m-2" style="border-radius:10px;line-height:0;">
            <div class="card-body">
                <img src="@Model.CategoryImage" style="height: 100px; object-fit: contain">
                <p class="mt-2">@Model.CategoryName</p>
            </div>
        </div>
    </div>
</a>






