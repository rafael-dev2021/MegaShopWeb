@model Application.Dtos.ProductDto

@{
    string[] imagePaths = new string[]
           {
        Model.Images[0],
        Model.Images[1],
        Model.Images[2],
        Model.Images[3]
           };
}

@if (!imagePaths.All(string.IsNullOrEmpty))
{
    @if (!string.IsNullOrEmpty(Model.Images[0]))
    {
        <img src="@Url.Content(Model.Images[0])" alt="@Model.Name" class="img-fluid zoomable-image" style=" max-width: 100%;max-height: 90vh;display: block;margin-left: auto;margin-right: auto;">
    }
    <div class="row">
        @foreach (var imagePath in imagePaths.Where(path => !string.IsNullOrEmpty(path)))
        {
            <div class="col-md-3">
                <img src="@imagePath" alt="@Model.Name" class="img-fluid secondary-image zoomable-image">
            </div>
        }
    </div>
}
