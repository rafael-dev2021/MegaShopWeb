<style>
    .py-3 {
        padding-bottom: 0.75rem !important;
        padding-top: 0.75rem !important;
    }

    .mb-4 {
        margin-bottom: 1rem !important;
    }

    .card {
        border: none;
        border-radius: 0px;
    }

    .remove-gutters > [class*='col-'] {
        padding-right: 0;
        padding-left: 0;
    }

    .remove-gutters .row > [class*='col-'] {
        margin-right: 0;
        margin-left: 0;
    }

    .col {
        position: relative;
        display: inline-block;
        overflow: hidden;
    }

        .col:hover .custom-button {
            opacity: 1;
        }

        .col:hover .fa-arrow-right {
            transform: translateX(5px);
        }

    .fa-arrow-right {
        transition: transform 0.3s ease;
    }


    .card {
        overflow: hidden;
    }

        .card img {
            filter: brightness(85%);
            transition: filter 0.3s ease;
        }

        .card:hover img {
            filter: brightness(70%);
        }

    .card-img-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }

</style>

