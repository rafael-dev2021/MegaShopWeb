<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.css">
</head>
<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-md navbar-light">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo/logo.png" alt="Megashop">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse d-md-inline-flex justify-content-between">
                        <form class="d-flex flex-grow-1" asp-controller="Products" asp-action="Search" method="get" style="max-width: 400px;">
                            <input class="form-control me-2 bar" type="search" placeholder="Search for Products" aria-label="Search" name="search" value="@ViewData["search"]">
                        </form>

                        <div class="btn d-none d-md-block" style="margin-right:auto;border: 1px solid; color:lightgray">
                            <a asp-controller="" asp-action="">
                                <span>
                                    <i class="fa-solid fa-location-crosshairs" style="color:darkgray"></i>
                                </span>
                            </a>
                        </div>
                        <div class="d-none d-md-block">
                            <i class="fa-regular fa-heart"></i>
                            &nbsp;
                            @* @await Component.InvokeAsync("ShoppingCartMenu") *@
                            &nbsp;
                            @* @await Html.PartialAsync("_LoginPartial") *@
                        </div>
                    </div>
                </div>
            </nav>
            <nav id="myLinks" class="navbar navbar-expand-md navbar-toggleable-md navbar-light">
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    @await Component.InvokeAsync("CategoryMenu")
                    @* <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                    Admin
                    </a>*@
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">ProductsTest</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="BestSellers">Best sellers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="DailyOffers">Daily Offers</a>
                        </li>
                        <li class="nav-item d-none d-sm-block" style="margin-left:auto">
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                        }
                        @if (Context.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ChangePassword">Change password</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="EditProfile">Edit profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Smartphone" asp-action="Index">Index</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="border-bottom mt-2 mb-4"></div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <button id="toggleFooterBtn" style="display:block;font-size:20px;margin: 0 auto; background-color: #fff; color: #fff; border: none">
        <span style="color:gray;font-size:15px">More Info <i id="toggleIcon" class="fa fa-chevron-up" style="font-size:12px" aria-hidden="true"></i></span>
    </button>

    <footer id="mainFooter" style="display: none;background-color:#f7f7f7">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-3 footer-col mt-3">
                    <h6>Account</h6>
                    <ul>
                        <li><a asp-controller="Account" asp-action="Login">Sign in</a></li>
                        <li><a asp-controller="Account" asp-action="Register">Sign Up</a></li>
                    </ul>
                </div>

                <div class="col-sm-6 col-md-3 footer-col mt-3">
                    <h6>Social networking</h6>
                    <ul>
                        <li><a href="#">Twitter</a></li>
                        <li><a href="#">Facebook</a></li>
                        <li><a href="#">Instagram</a></li>
                        <li><a href="#">LinkedIn</a></li>
                        <li><a href="#">GitHub</a></li>
                    </ul>
                </div>

                <div class="col-sm-6 col-md-3 footer-col mt-3">
                    <h6>About Us</h6>
                    <ul>
                        <li><a asp-controller="" asp-action="">MegaShop</a></li>
                        <li><a asp-controller="" asp-action="">Investor Relations</a></li>
                        <li><a asp-controller="" asp-action="">Trends</a></li>
                        <li><a asp-controller="" asp-action="">Sustainability</a></li>
                    </ul>
                </div>

                <div class="col-sm-6 col-md-3 footer-col mt-3">
                    <h6>Contact</h6>
                    <ul>
                        <li><a asp-controller="Contact" asp-action="Contact">Contact</a></li>
                        <li><a asp-controller="" asp-action="">Track shipments</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">FAQ</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <footer class="border-top footer text-muted">
        <div class="container">
            Copyright 2023 &copy;. All rights reserved. Powered by
            <a href="https://github.com/rafael-dev2021">
                <span style="color:blueviolet;font-size:20px"><i class="fa fa-github" aria-hidden="true"></i></span>
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/GetProductsListPartial.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <!-- Se não estiver incluindo já, adicione o script do Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
