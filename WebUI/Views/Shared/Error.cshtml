@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="card mb-3">
    <div class="d-flex align-items-center justify-content-center">
        <img src="~/images/5203299.jpg" class="img-fluid card-img-top" style="width:25%" />
    </div>
    <div class="card-body  text-center" style="background-color:lightgray">
        <h5 class="card-title">Oops! Something's gone wrong.</h5>
        <p class="card-text">
            Sorry, we found an error processing your request.
        </p>
        @if (Model.ShowRequestId)
        {
            <p class="card-text">
                <small class="text-body-secondary">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </small>
            </p>
        }
        <p class="mt-4">
            Please try again later or contact support if the problem persists.
            <a asp-controller="Contact" asp-action="Contact">Here</a>
        </p>

        <p class="mt-4">
            <a class="btn btn-primary" href="/">
                <i class="fas fa-home me-2"></i> Back to Home Page
            </a>
        </p>
    </div>
</div>
