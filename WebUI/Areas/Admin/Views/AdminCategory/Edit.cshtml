@model  Application.Dtos.CategoryDto
@{
    ViewData["Title"] = "Edit";
}
<h3>Edit Category</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryImage" class="control-label"></label>
                <input asp-for="CategoryImage" class="form-control" />
                <span asp-validation-for="CategoryImage" class="text-danger"></span>
                <div class="form-group col-md-6">
                    <img src="@Url.Content(Model.CategoryImage)" width="150" />
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-info">Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


